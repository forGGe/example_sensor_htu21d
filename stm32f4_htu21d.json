{
    "platform": {
        "name": "stm32",
        "device": "STM32F407VG",
        "console": "USART3",
        "bypass_console": "USART3",

        "clock": {
            "source": "HSE",
            "speed": 8000000
        },

        "uart": [
            {
                "id": "USART3",
                "baud": 115200,
                "comment": "Bypass and console UART"
            }
        ],

        "i2c": [
            {
                "id": "I2C1",
                "mode": "IRQ",
                "speed": 1000,
                "duty_cycle": "2/1",
                "ack": true,
                "ack_addr_bit": 7,
                "own_addr": 51,
                "comment": "HTU21D I2C",
                "alias": "i2c1"
            }
        ],

        "pinmux": [
            {
                "ids": [ "PD8", "PD9"],
                "mode": "AF",
                "function": "USART3",
                "comment": "Console UART: PD8 - RX, PD9 - TX"
            },
            {
                "ids": [ "PB6", "PB9" ],
                "mode": "AF",
                "function": "I2C1",
                "otype": "OD",
                "pull": "no",
                "comment": "HTU21D I2C pins: PB6 - SCL, PB9 - SDA"
            }
        ]
    }
}
